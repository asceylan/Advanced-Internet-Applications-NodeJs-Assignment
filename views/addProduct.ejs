<%- include('./partials/header'); -%>

<div class="container mt-3">
    <div class="row">

        <div class="col-md-12 d-flex justify-content-center">
            <div class="card shadow col-md-6 p-3">
                <form action="/add-product" method="POST" enctype="multipart/form-data">
                    <% if(locals.errors){ %> 
                        <ul>
                        <% errors.forEach(function( err){ %>
                            <li> <%= err.msg %> </li>
                        <% }) %>
                        </ul>
                    <% } %>
                    <div class="form-group">
                        <label for="productPhoto">Product Photo</label>
                        <input required type="file" name="productPhoto" class="form-control" id="productPhoto">
                        <small class="font-12">*png and jpg only</small>
                    </div>
                    <div class="form-group">
                        <label for="productName">Product Name</label>
                        <input required type="text" name="productName" class="form-control" id="productName">
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="productPrice">Product Price</label>
                            <input required type="number" name="productPrice" class="form-control" id="productPrice">
                        </div>
                        <div class="form-group col-md-5 offset-md-1">
                            <label for="productPrice">Share</label>
                            <button type="submit" class="btn btn-primary btn-block">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
<%- include('./partials/footer'); -%>